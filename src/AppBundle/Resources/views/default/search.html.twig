{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/search.css') }}">
{% endblock %}

{% block body %}
    <header class="parallax-window">
        <img class="parallax-slider" src="{{ asset('bundles/app/img/header-bg.jpg') }}"/>
        <div class="container search-form">
            <div class="row">
                <form class="form-inline col-lg-12" action="{{ path('search') }}" method="GET">
                    <div class="input-group">
                        <select class="form-control-xl search-input" name="q[]" multiple="multiple" style="width:100%;">
                            <option value="AL">Alabama</option>
                            <option value="WY">Wyoming</option>
                            <option value="AL1">Alabama1</option>
                            <option value="WY1">Wyoming1</option>
                            <option value="AL2">Alabama2</option>
                            <option value="WY2">Wyoming2</option>
                            <option value="AL3">Alabama3</option>
                            <option value="WY3">Wyoming3</option>
                        </select>
                        <!--<input type="text" class="form-control form-control-xl search-input" name="q" placeholder="Look for a publication, an author, a laboratory...">-->
                        <span class="input-group-btn">
                            <button class="btn btn-secondary btn-xl" type="submit"><span class="fa fa-search"></span></button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </header>
    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="search-box block">
                        <h4>Filters</h4>
                        <hr>
                        <form action="">
                            <select class="form-control" name="" id="">
                                <option value="">Option X</option>
                                <option value="">Option X</option>
                                <option value="">Option X</option>
                            </select>
                            <select class="form-control" name="" id="">
                                <option value="">Option X</option>
                                <option value="">Option X</option>
                                <option value="">Option X</option>
                            </select>
                        </form>
                    </div> 
                </div>
                <div class="col-lg-9">
                    <div class="search-item-container">
                        <h2 class="pull-xs-left">Publications for FirstName NAME</h2>
                        <p class="number-of pull-xs-right">X publications</p>
                        <div class="clear"></div>
                        <div class="search-item block">
                            <div class="search-item-img background-img" style="background-image: url('http://placehold.it/200x200');"></div>
                            <div class="search-item-content">
                                <h3><a href="">Title</a></h3>
                                <ul class="search-item-author">
                                    <li class=""><a href="">FirstName NAME</a></li>
                                    <li class=""><a href="">FirstName NAME</a></li>
                                    <li class=""><a href="">FirstName NAME</a></li>
                                </ul>
                                <p class="search-item-abstract">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur porttitor diam vel lectus nullam.</p>
                                <p class="search-item-book m-b-0"><i class="fa fa-book"></i>Booktitle</p>
                                <p class="search-item-year">Year</p>
                                <a class="search-item-category" href="">Category</a>
                            </div>
                        </div>
                        <nav class="pull-xs-right">
                            <p>Page <b>Y</b> of <b>X</b></p>
                            <ul class="pager">
                                <li class="disabled"><a class="block" href="#"><i class="fa fa-chevron-left"></i></a></li>
                                <li><a class="block" href="#"><i class="fa fa-chevron-right"></i></a></li>
                            </ul>
                        </nav>
                        <div class="clear"></div>
                    </div>
                    <div class="collaborator-item-container">
                        <h2 class="pull-xs-left">List of collaborators</h2>
                        <p class="number-of pull-xs-right">X collaborators</p>
                        <div class="clear"></div>
                        <div class="collaborator-item block col-xs-12 col-sm-6">
                            <p><a href="">FirstName NAME</a></p>
                            <p class="m-b-0">Publication in common : X</p>
                            <p class="collaborator-item-team">Team</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}