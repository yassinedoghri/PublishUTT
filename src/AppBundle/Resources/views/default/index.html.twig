{% block custom_javascript %}
    <script>

        $("#search").select2({
            ajax: {
                url: "{{ path("searchterm") }}",
                dataType: 'json',
                delay: 250,
                data: function (params) {
                    return {
                        q: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;

                    return {
                        results: data.items,
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    };
                },
                cache: true
            },
            minimumInputLength: 1,
            templateResult: formatRepo,
            templateSelection: function (data) {
                return data.label || data.text;
            }
        });

        function formatRepo(repo) {
            if (repo.loading)
                return repo.text;
            if (!repo.children) {
                var markup = $('<div />');
                markup.append($('<span />').attr('class', 'font-weight-bold').html(repo.text));
                markup.append($('<span />').html(' as '));
                markup.append($('<span />').attr('class', 'text-info').html(repo.type));
            }
            return markup;
        }

        $("#search-form").submit(function (eventObj) {
            var searchVals = $("#search").select2("val");
            $.each(searchVals, function (index, obj) {
                var name = '';
                var val = '';
                if (!isNaN(obj)) {
                    name = 'year[]';
                    val = obj;
                } else {
                    if (obj.substr(0, 2) === 'a-') { // Author
                        name = 'author[]';
                        val = obj.split('-')[1];
                    } else if (obj.substr(0, 2) === 'r-') { // Researcher
                        name = 'researcher[]';
                        val = obj.split('-')[1];
                    } else if (obj.substr(0, 2) === 't-') { // Team
                        name = 'team[]';
                        val = obj.split('-')[1];
                    } else {
                        name = 'category[]';
                        val = obj;
                    }
                }
                $('<input />').attr('type', 'hidden')
                        .attr('name', name)
                        .attr('value', val)
                        .appendTo('#search-form');
            });
            return true;
        });
    </script>
