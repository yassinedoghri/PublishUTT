<!DOCTYPE html>
<html>
    <head>
        <title>Publish UTT | {% block title %}Welcome!{% endblock %}</title>
        <meta charset="UTF-8">
        <link rel="icon" type="image/x-icon" href="{{ asset('bundles/app/img/favicon.ico') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/font-awesome.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/owl.carousel/dist/assets/owl.carousel.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/select2/dist/css/select2.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/vendor/roboto-fontface/css/roboto-fontface.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/css/style.css') }}">
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <nav class="main-nav navbar navbar-full navbar-fixed-top navbar-light">
        <a class="navbar-brand" href="{{ path('homepage') }}">
            <img src="{{ asset('bundles/app/img/logo.svg') }}" class="svg-logo" alt="Logo Publish UTT"/>
            <span class="sr-only">Publish UTT</span>
        </a>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <ul class="nav navbar-nav navbar pull-xs-left">
                <li class="navbar-btn">
                    <button class="btn btn-primary-outline"><span class="fa fa-plus"></span> Publish an article!</button>
                </li>
            </ul>
        {% endif %}
        <button class="navbar-toggler pull-xs-right hidden-sm-up" type="button" data-toggle="collapse" data-target="#collapsingNavbar">
            &#9776;
        </button>
        <ul class="nav navbar-nav navbar pull-xs-right collapse navbar-toggleable-xs" id="collapsingNavbar">
            <li class="nav-item">
                <a class="nav-link" href="#about">About</a>
            </li>
            <li class="nav-item">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="fa fa-user"></span> {{ app.user.firstname ~ ' ' ~ app.user.lastname }}
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                            <a class="dropdown-item" href="#">My Account</a>
                            <a class="dropdown-item" href="#">My Publications</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('fos_user_security_logout') }}">Disconnect</a>
                        </div>
                    </div>
                {% else %}
                    <a class="nav-link" href="{{ path('fos_user_security_login') }}">My Account</a>
                {% endif %}
            </li>
        </ul>
    </nav>
{% block body %}{% endblock %}
<footer class="footer">
    <div class="container-fluid">
        <span class="text-muted">Copyright Â© 2016 | Publish UTT</span>
        <span class="text-muted pull-right"><a href="http://yassine.doghri.fr/" target="_blank">Yassine Doghri</a> & <a href="http://www.romainbrandao.fr/" target="_blank">Romain Brandao</a></span>
    </div>
</footer>
<script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/vendor/owl.carousel/dist/owl.carousel.min.js') }}"></script>
<script src="{{ asset('assets/vendor/parallax.js/parallax.min.js') }}"></script>
<script src="{{ asset('assets/vendor/select2/dist/js/select2.min.js') }}"></script>
<script src="{{ asset('bundles/app/js/publish-utt.js') }}"></script>
{% block javascripts %}{% endblock %}
{% block custom_javascript %}{% endblock %}
</body>
</html>
