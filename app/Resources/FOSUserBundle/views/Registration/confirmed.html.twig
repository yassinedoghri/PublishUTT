{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <section>
        <div class="container">
            <p class='text-center'>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>
            {% if targetUrl %}
                <p class='text-center'><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
                {% endif %}
        </div>
    </section>
{% endblock fos_user_content %}
